<!doctype html>
<html lang="en">
  {% include 'layouts/head' %}
  <body>
    {% include 'layouts/header' %}

    <main class="main">
      <div class="container">
        <div class="row">
          {% if page.metadata.hide_sidebar != true %}
            <aside class="sidebar col-12 col-md-4">
              {% include 'layouts/sidebar' %}
            </aside>
            <section class="content col-12 col-md-8">
          {% else %}
            <section class="content col-12 col-md-12">
          {% endif %}
            {% include 'shared/flash-messages' %}
            {% include 'layouts/content' %}
          </section>
        </div>
      </div>
    </main>

    {% include 'layouts/footer' %}
    {% include 'layouts/javascripts' %}
  </body>
</html>
